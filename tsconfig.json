{
	"compilerOptions": {
		"module": "commonjs",
		"outDir": "out",
		"rootDir": "src",
		"target": "es6",
		"strict": true,
		"noFallthroughCasesInSwitch": true,
		"strictNullChecks": true,
		"sourceMap": true,
		"noUnusedLocals": true,
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules/**/*",
		"out/**/*"
	]
}